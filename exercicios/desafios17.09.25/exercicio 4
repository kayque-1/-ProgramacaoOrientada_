import java.util.Scanner;
    public class Media{
        public static void main(String[]args){
            Scanner entrada = new Scanner(System.in);
            System.out.print("Entre com o valor da nota da prova 1:");
            double prova1 = entrada.nextDouble();
            System.out.print("Entre com o valor da nota da prova 2:");
            double prova2 = entrada.nextDouble();
            System.out.print("Entre com a nota do trabalho:");
           double trabalho = entrada.nextDouble();
            double Media = (prova1 + prova2 + trabalho)/3 ;
            System.out.println("Sua média é:" + Media);
            if(Media>= 6)System.out.print("Voce esta aprovado");
             else System.out.println("Voce esta reprovado");
        }
    }
}
