import java.util.Scanner;
    public class itbi{
        public static void main(String[]args){
            Scanner entrada = new Scanner(System.in);
            System.out.print("Entre com o valor da transação:");
            int transacao = entrada.nextInt();
            System.out.print("Entre com o valor venal:");
            int valor_venal = entrada.nextInt();
            System.out.print("Entre com o percentual(%):");
            int percentual = entrada.nextInt();
            int maior_valor = transacao - valor_venal;
            int imposto = (maior_valor * percentual)/100;
            System.out.println("O valor do imposto será:" + imposto);
        }
    }
